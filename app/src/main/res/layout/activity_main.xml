<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_blur"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="LOGIN PAGE"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="30sp"
        android:textStyle="bold"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/press_bg"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Enter The mail i'd/phone"
        android:padding="10dp"
        android:layout_marginTop="14dp"
        android:textColorHint="@color/white" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/press_bg"
        android:hint="Enter the password"
        android:drawableLeft="@drawable/security_24"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Forgot Password??"
        android:textAlignment="center"
        android:textColor="#0914EC"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loginhere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_bg"
        android:drawableLeft="@drawable/login_24"
        android:text="Login Here"
        android:textColor="@color/white"
        android:textSize="20dp"

        android:textStyle="bold" />

    <Button
        android:id="@+id/create_an_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_bg"
        android:text="Create An Account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/google"
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_bg"
        android:drawableLeft="@drawable/ic_google"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/facebook"
        android:layout_width="67dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_bg"
        android:drawableLeft="@drawable/ic_facebook"
        android:textSize="20dp"

        />

</LinearLayout>